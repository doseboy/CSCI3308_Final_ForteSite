<% include ../partials/header %>
<div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1><img class="img-fluid" src="/images/forteLogo.jpg" alt="LogoPic"></h1>
                <% include ../partials/messages %>
                <form action="/reset/:token" method="POST">
                    <div class="form-group">
                        <label for="forgot">Enter your new password:</label>
                        <input
                        type="email"
                        id="forgot_email"
                        name="forgot_email"
                        class="form-control"
                        placeholder="Enter Email associated with account"
                        value=""
                        />
                    </div>
                    <div class="form-group">
                        <label for="forgot">Enter your new password:</label>
                        <input
                        type="password"
                        id="password"
                        name="newPass1"
                        class="form-control"
                        placeholder="Enter New Password"
                        value=""
                        />
                    </div>
                    <div class="form-group">
                            <input
                            type="password"
                            id="password1"
                            name="newPass2"
                            class="form-control"
                            placeholder="Enter New Password"
                            value=""
                            />
                        </div>
                    <button type="submit" class="btn btn-primary btn-block" id="new_password">Update Password</button>
                </form> 
            </div>


